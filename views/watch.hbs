<section class="video-player-section">
  <div class="container">
    <a href="/" class="back-button">
      <i class="fas fa-arrow-left"></i> Back to Search
    </a>
    
    <div class="video-player-container">
      <div class="video-wrapper">
        <iframe 
          src="https://www.youtube.com/embed/{{videoId}}?autoplay=1&rel=0" 
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
          allowfullscreen
          title="YouTube video player"
        ></iframe>
      </div>
      
      <div class="video-details">
        <h1 class="video-title">Video Title</h1>
        <div class="video-meta">
          <span class="views">1,234,567 views</span>
          <span class="date">â€¢ Published on Jan 1, 2023</span>
        </div>
        <div class="channel-info">
          <img src="https://via.placeholder.com/48" alt="Channel" class="channel-avatar">
          <div>
            <h2 class="channel-name">Channel Name</h2>
            <p class="subscribers">1.2M subscribers</p>
          </div>
          <button class="subscribe-button">Subscribe</button>
        </div>
        <div class="video-description">
          <p>Full video description goes here...</p>
        </div>
      </div>
    </div>
  </div>
</section>